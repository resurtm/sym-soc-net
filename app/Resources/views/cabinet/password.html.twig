        <div class="col-md-4 col-md-offset-4">
            <h1>Change Password</h1>

            {% form_theme form 'bootstrap_3_layout.html.twig' %}
            {{ form_start(form, {
                attr: {novalidate: 'novalidate'}
            }) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
