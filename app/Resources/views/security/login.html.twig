{% extends 'layouts/main.html.twig' %}

{% block title %}Log In &mdash; {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="col-md-4 col-md-offset-4">

            <h1>Sign In</h1>
            <p class="lead">Enter a valid credentials in order to log into the web site:</p>

            {% if error %}
                <div class="alert alert-danger">
                    <ul class="list-unstyled">
                        <li>
                            <span class="glyphicon glyphicon-exclamation-sign"></span>
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </li>
                    </ul>
                </div>
            {% endif %}

            <form action="{{ path('login') }}" method="post" novalidate="novalidate">
                <div class="form-group {% if error %}has-error{% endif %}">
                    <label class="control-label required" for="login_form_username">Username</label>
                    <input type="text" id="login_form_username" name="_username"
                           required="required" placeholder="Username" class="form-control"/>
                </div>

                <div class="form-group {% if error %}has-error{% endif %}">
                    <label class="control-label required" for="login_form_password">Password</label>
                    <input type="password" id="login_form_password" name="_password"
                           required="required" placeholder="Password" class="form-control"/>
                </div>

                {#<input type="hidden" name="_target_path" value="/" />#}

                <div class="form-group">
                    <button type="submit" class="btn btn-default btn-lg btn">Log In</button>
                </div>
            </form>

        </div>
    </div>
{% endblock %}
